{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Planet",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#constants"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [{
                "name": "comment.line.planet",
                "match": "#.*"
            }]
        },
        "functions": {
            "patterns": [{
                "name": "entity.name.function.planet",
                "match": "\\bfn\\b([[:blank:]]+\\b[a-zA-Z_][0-9a-zA-Z_]*\\b)?"
            }]
        },
        "keywords": {
            "patterns": [{
                "name": "keyword.control.planet",
                "match": "\\b(and|elif|else|if|loop|match|not|or|otherwise|then|while)\\b"
            }, {
                "name": "keyword.other.planet",
                "match": "\\b(break|continue|jump|label|return)\\b"
            }]
        },
        "types": {
            "patterns": [{
                "name": "entity.name.type.planet",
                "match": "\\b(any|bool|cast|char|data|extrn|f64|i32|i64|i8|none|pub|sizeof|string|struc|type|u32|u64|u8|union)\\b"
            }]
        },
        "constants": {
            "patterns": [{
                "name": "constant.numeric.planet",
                "match": "\\b([A-Z_][0-9A-Z_]*|false|nil|true)\\b"
            }]
        }
    },
    "scopeName": "source.planet"
}
