{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Planet",
    "patterns": [
        {
            "include": "#reminders"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#preprocessors"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#characters"
        },
        {
            "include": "#functions"
        },
        {
            "include": "#keywords"
        },
        {
            "include": "#types"
        },
        {
            "include": "#constants"
        }
    ],
    "repository": {
        "reminders": {
            "patterns": [{
                "name": "invalid.illegal.planet",
                "match": "\\b(FIXME|TODO|XXX)\\b"
            }]
        },
        "comments": {
            "patterns": [{
                "name": "comment.line.planet",
                "match": "#.*"
            }]
        },
        "preprocessors": {
            "patterns": [{
                "name": "meta.preprocessor.planet",
                "match": "^[[:blank:]]*\\b(import|use)\\b"
            }, {
                "name": "variable.language.planet",
                "match": "\\bm4_[0-9a-zA-Z_]*\\b"
            }]
        },
        "strings": {
            "patterns": [{
                "name": "string.quoted.double.planet",
                "match": "\"([^\"]|\\\\\")*\""
            }]
        },
        "characters": {
            "patterns": [{
                "name": "string.quoted.single.planet",
                "match": "'([^'\\\\]|\\\\([\"'\\\\abfnrtv]))'"
            }]
        },
        "functions": {
            "patterns": [{
                "name": "entity.name.function.planet",
                "match": "\\bfn\\b([[:blank:]]+\\b[a-zA-Z_][0-9a-zA-Z_]*\\b)?"
            }]
        },
        "keywords": {
            "patterns": [{
                "name": "keyword.control.planet",
                "match": "\\b(and|elif|else|if|loop|match|not|or|otherwise|then|while)\\b"
            }, {
                "name": "keyword.other.planet",
                "match": "\\b(break|continue|jump|label|return)\\b"
            }]
        },
        "types": {
            "patterns": [{
                "name": "entity.name.type.planet",
                "match": "\\b(any|bool|cast|char|data|extrn|f64|i32|i64|i8|none|pub|sizeof|string|struc|type|u32|u64|u8|union)\\b"
            }]
        },
        "constants": {
            "patterns": [{
                "name": "constant.numeric.planet",
                "match": "\\b([A-Z_][0-9A-Z_]*|false|nil|true)\\b"
            }]
        }
    },
    "scopeName": "source.planet"
}
