#  Test initialization of nested static structs, including:
#  * - partial initialization
#  * - arrays of structs, structs containing arrays
#  * - implicit conversion of scalar elements, array decay of string literals
#  









#  standard library function
use "string"

#  structure type defs
type struc inner(    one_i: i32    , two_arr: [3]i8    , three_u: u32    
    )

type struc outer(    one_l: i64    , two_struct: struc inner    
    , three_msg: string    , four_d: f64    )

#  declarations of global vars (defined in client)
extrn all_zeros: struc outer;
extrn partial: struc outer;
extrn full: struc outer;
extrn converted: struc outer;
extrn struct_array: [3]struc outer;

#  declarations of validation functions (defined in lib)
pub fn test_uninitialized(none
    ) i32;
pub fn test_partially_initialized(none) i32;
pub fn test_fully_intialized(none) i32;
pub fn test_implicit_conversions(none) i32;
pub fn test_array_of_structs(none) i32;

