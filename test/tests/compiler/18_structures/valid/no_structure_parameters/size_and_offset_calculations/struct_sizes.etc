#  struct declarations for size/layout tests

type struc eight_bytes(    i: i32#  bytes 0-3
    , c: char#  byte 4
#  3 more bytes of padding to make size a multiple of 4
    
    )

type struc two_bytes(
    arr: [2]char#  bytes 0-1
    #  no padding
    )

type struc three_bytes(    arr: [3]char#  bytes 0-2
#  no padding
    
    )

type struc sixteen_bytes(    eight: struc eight_bytes#  bytes 0-7
    
    , two: struc two_bytes#  bytes 8-9
    , three: struc three_bytes#  bytes 10-12
#  3 bytes of padding to make size a multiple of 4  (i.e. 16 bytes)
#  b/c struct eightbyte is 4 byte-aligned)
    
    )

type struc seven_bytes(    two: struc 
    two_bytes#  bytes 0-1
    , three: struc three_bytes#  bytes 2-4
    
    , two2: struc two_bytes#  bytes 5-6
    
    ) #  total size is 7 bytes

type struc twentyfour_bytes(    seven: struc seven_bytes#  bytes 0-6
    #  1 byte padding to make next member four-byte aligned
    
    , sixteen: struc sixteen_bytes#  bytes 8-24 (four-byte aligned)
    )

type struc twenty_bytes(    sixteen: struc sixteen_bytes#  bytes 0-15
    , two: struc two_bytes#  bytes 16-17
    #  2 bytes padding to make the whole struct four-byte aligned
    ) #  20 bytes b/c it's four-byte aligned

type struc wonky(    arr: [19]char    
    ) #  19 bytes w/ no padding

type struc internal_padding(    c: char    #  7 bytes of padding so next member is eight byte-aligned
    , d: f64    ) #  16 bytes total

type struc contains_struct_array(    c: char#  byte 0
    #  3 bytes padding so next member is 4 byte-aligned
    , struct_array: [3]struc eight_bytes#  bytes 4-27
    
    ) #  28 bytes total

